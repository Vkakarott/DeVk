---
import background from '../assets/background.svg';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

const data = {
	Nome: 'João Vitor Gomes de Oliveira',
	Idade: 22,
	Localidade: 'Goiânia, Goiás, Brasil',
	Freelancer: true,
	Idiomas: 'Português, Inglês',

};
---

<Layout>
    <img class="fixed -top-20 -right-50 w-full h-full z-1 filter: blur-3xl" src={background.src} alt="" fetchpriority="high" />
	<main class="flex-1 p-2 z-10 w-full h-full flex items-center justify-center">
		<div class="absolute top-0 rigth-0">
			<Card data={data} />
		</div>
	</main>
</Layout>
