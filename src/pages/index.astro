---
import Layout from '../layouts/Layout.astro';
import banner from '../assets/banner.svg';
import FuzzyText from '../components/FuzzyText.astro';
import RotateText from '../components/RotateText.astro';
import ShinyText from '../components/ShinyText.astro';
---

<Layout>
	<main class="flex-1 z-10 h-full w-full">
		<section class="flex flex-col h-full items-center">
			<img class="p-2 z-10 w-30" src={banner.src} alt="Label portifolio" />
			<div class="flex flex-col justify-center items-center h-full pb-20">
				<FuzzyText text="DESENVOLVEDOR"/>
				<RotateText texts={["Front End", "Back End", "Mobile", "Full Stack"]}/>
				<ShinyText text="Criando soluções inovadoras, completas e experiências imersivas." size={1} justify={"center"}/>
			</div>
		</section>
	</main>
</Layout>
