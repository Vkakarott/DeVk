---
import ShinyText from "./ShinyText.astro";
const { tecs, size, description, title } = Astro.props;
---

<div class="flex flex-col gap-1 border border-zinc-800 bg-zinc-950 rounded-xl p-3 w-90 z-10">
    <h2 class="text-xl font-bold text-white">{title}</h2>
    <ShinyText text={description} size={0.8}/>
    <div class="flex flex-wrap justify-center gap-2 mt-2">
        {tecs.map((tec: string) => (
            <img src={`https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/${tec}.svg`} width={size} class="z-10 p-2" />
        ))}
    </div>
</div>
